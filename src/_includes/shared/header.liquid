<header slot="title">
  <button sidebar-toggler onclick='
    if (!document.body.hasAttribute("open-sidebar")) {
      document.body.setAttribute("open-sidebar", "")
    } else {
      document.body.removeAttribute("open-sidebar")
    }
  '>
    <bd-icon>
      {% include "svgs/layout-sidebar-left-expand.svg" %}
    </bd-icon>
  </button>
  <h1 style="flex-grow: 1">{{ title }}</h1>

  <search>
